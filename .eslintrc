{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "globals": {
    "document": true,
    "navigator": true,
    "window": true,
    "node": true,
    "angular": true
  },
  "extends": "airbnb-base/legacy",
  "plugins": [
    "import"
  ],
  "rules": {
    "comma-dangle": [
      "error",
      "never"
    ],
    "indent": [
      "error",
      2
    ],
    "global-require": "off",
    "class-methods-use-this": "off"
  }
}
